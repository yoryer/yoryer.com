---
import SectionContainer from "@ui/SectionContainer.astro";
import SectionTitle from "@ui/SectionTitle.astro";

const blogPosts = [
  {
    title: "Building my personal website",
    image: "/img/about-me-avatar.webp", // Placeholder
    link: "#",
  },
  {
    title: "Certificate pinning with Flutter",
    image: "/img/ai_avatar.webp", // Placeholder
    link: "#",
  },
  {
    title: "Custom mechanical keyboard",
    image: "/img/logo.svg", // Placeholder
    link: "#",
  },
];
---

<section class="mt-5 min-h-screen">
  <div class="w-full h-32">
</div>
  <SectionContainer class="-mt-32 pb-16">
    <div class="flex mb-12">
      <div class="w-full">
        <SectionTitle label="Blog Posts" color="rose" />
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {blogPosts.map((post) => (
        <a href={post.link} class="block bg-yankees-blue rounded-lg overflow-hidden group">
          <div class="relative h-80">
            <img src={post.image} alt={post.title} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
            <div class="absolute inset-0 bg-black bg-opacity-50 flex items-end p-6">
              <h4 class="text-2xl font-bold text-white">{post.title}</h4>
            </div>
          </div>
        </a>
      ))}
    </div>
  </SectionContainer>
</section>