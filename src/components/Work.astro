    details: {
      year: "2023",
      role: {
        en: "Designer",
        es: "Diseñador"
      },
      tools: ["Figma"],
    },
  },
  {
    id: 6,
    title: "Basa Empresas",
    description: {
      en: "Mobile Banking App Design & Development",
      es: "Diseño y Desarrollo de App de Banca Móvil"
    },
    image: "/media/work/basa-empresas-preview.png",
    gridClass: "col-span-1 row-span-1", // Square bottom right
    story: {
      en: "I created this design for Basa, a Paraguayan bank, to cater to their enterprise customers.\r\nThe goal of the app was to allow enterprise customers to authorize different types of transactions.\r\nThe app was built using Flutter for both iOS and Android.",
      es: "Creé este diseño para Basa, un banco paraguayo, para atender a sus clientes empresariales.\r\nEl objetivo de la aplicación era permitir a los clientes empresariales autorizar diferentes tipos de transacciones.\r\nLa aplicación fue construida usando Flutter para iOS y Android."
    },
    images: [
      "/media/work/basa-empresas-login.png",
      "/media/work/basa-empresas-config.png",
      "/media/work/basa-empresas-transaction.png",
      "/media/work/basa-empresas-summary.png",
      "/media/work/basa-empresas-confirmation.png",
