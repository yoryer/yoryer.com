    details: {
      client: "Banco Basa",
      company: "Open Technologies SA",
      year: "2020",
      role: {
        en: "Designer & Mobile Developer",
        es: "Diseñador y Desarrollador Móvil"
      },
      tools: ["Sketch", "Flutter"],
    },
  },
];
---

<section id="work" class="mt-5 min-h-screen">
  <div class="w-full h-32"></div>
  <SectionContainer class="-mt-32 pb-16">
    <div class="flex mb-12">
      <div class="w-full">
        <SectionTitle label={t.work.title} color="rose" />
      </div>
    </div>

    <!-- Bento Grid -->
    <WorkGrid projects={projects} lang={lang} translations={t} client:load />
  </SectionContainer>
</section>
