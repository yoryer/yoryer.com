---
import SectionContainer from "@ui/SectionContainer.astro";
import SectionTitle from "@ui/SectionTitle.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const otherWork = [
  {
    title: "EdiBarber",
    description: t.work.projectDescription,
    image: "/img/logo.svg", // Placeholder
  },
  {
    title: "EdiBarber",
    description: t.work.projectDescription,
    image: "/img/logo.svg", // Placeholder
  },
  {
    title: "EdiBarber",
    description: t.work.projectDescription,
    image: "/img/logo.svg", // Placeholder
  },
];
---

<section id="work" class="mt-5 min-h-screen">
  <div class="w-full h-32"></div>
  <SectionContainer class="-mt-32 pb-16">
    <div class="flex mb-12">
      <div class="w-full">
        <SectionTitle label={t.work.title} color="rose" />
      </div>
    </div>

    <!-- Other Work -->
    <div class="grid md:grid-cols-3 gap-8">
      {
        otherWork.map((item) => (
          <div class="bg-yankees-blue rounded-lg p-6">
            <img
              src={item.image}
              alt={item.title}
              class="rounded-lg mb-4 w-full h-48 object-cover"
            />
            <h4 class="text-2xl font-bold mb-2">{item.title}</h4>
            <p class="text-silver">{item.description}</p>
          </div>
        ))
      }
    </div>
  </SectionContainer>
</section>
