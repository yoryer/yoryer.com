---
import SectionContainer from "@ui/SectionContainer.astro";
import SectionTitle from "@ui/SectionTitle.astro";

const featuredWork = {
  title: "yoryer.com",
  description: "Design and development of my personal portfolio.",
  image: "/img/hero_hover.svg", // Placeholder
  sourceCodeUrl: "#",
};

const otherWork = [
  {
    title: "EdiBarber",
    description: "Logo design for a local barbershop in Paraguay.",
    image: "/img/logo.svg", // Placeholder
  },
  {
    title: "EdiBarber",
    description: "Logo design for a local barbershop in Paraguay.",
    image: "/img/logo.svg", // Placeholder
  },
  {
    title: "EdiBarber",
    description: "Logo design for a local barbershop in Paraguay.",
    image: "/img/logo.svg", // Placeholder
  },
];
---

<section class="mt-5 min-h-screen">
  <div class="w-full h-32">
</div>
  <SectionContainer class="-mt-32 pb-16">
    <div class="flex mb-12">
      <div class="w-full">
        <SectionTitle label="My Work" color="rose" />
      </div>
    </div>

    <!-- Featured Work -->
    <div class="bg-yankees-blue rounded-lg p-8 mb-16 flex items-center">
      <div class="w-1/2 pr-8">
        <p class="text-sm text-rose mb-2">FEATURED WORK</p>
        <h3 class="text-4xl font-bold mb-4">{featuredWork.title}</h3>
        <p class="text-silver mb-6">{featuredWork.description}</p>
        <a href={featuredWork.sourceCodeUrl} class="text-rose hover:underline">Source code</a>
      </div>
      <div class="w-1/2">
        <img src={featuredWork.image} alt={featuredWork.title} class="rounded-lg w-full h-auto" />
      </div>
    </div>

    <!-- Other Work -->
    <div class="grid md:grid-cols-3 gap-8">
      {otherWork.map((item) => (
        <div class="bg-yankees-blue rounded-lg p-6">
          <img src={item.image} alt={item.title} class="rounded-lg mb-4 w-full h-48 object-cover" />
          <h4 class="text-2xl font-bold mb-2">{item.title}</h4>
          <p class="text-silver">{item.description}</p>
        </div>
      ))}
    </div>
  </SectionContainer>
</section>