---
import SectionContainer from "@ui/SectionContainer.astro";
import SectionTitle from "@ui/SectionTitle.astro";
---

<section id="contact" class="mt-5 min-h-screen">
  <div class="w-full h-32 bg-gradient-to-b from-yankees-blue to-transparent">
  </div>
  <SectionContainer class="-mt-32 pb-16">
    <div class="flex flex-col md:flex-row mb-12">
      <div class="w-full md:w-1/3"></div>
      <div class="w-full md:w-2/3 md:ml-16">
        <SectionTitle label="Contact" color="blue" />
      </div>
    </div>

    <div class="flex flex-col md:flex-row items-start">
      <div class="w-full md:w-2/3 md:ml-16 font-poppins text-xl leading-relaxed space-y-6">
        <p>
          Feel free to reach out to me via email at <a href="mailto:jorge.noguera@example.com" class="text-light-sky-blue hover:underline">jorge.noguera@example.com</a> or connect with me on LinkedIn.
        </p>
      </div>
    </div>
  </SectionContainer>
</section>