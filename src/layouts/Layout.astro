---
import About from "@components/About.astro";
import Blog from "@components/Blog.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Hero from "@components/Hero.astro";
import Skills from "@components/Skills.astro";
import Work from "@components/Work.astro";
import Contact from "@components/Contact.astro";
import SEO from "@components/SEO.astro";
import GoogleAnalytics from "@components/GoogleAnalytics.astro";
import "@styles/global.css";
import { getLangFromUrl } from "@i18n/utils";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const lang = getLangFromUrl(Astro.url);

// Schema.org structured data for homepage
const schema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Jorge Noguera",
  "url": Astro.site,
  "image": new URL("/img/about-me-avatar.webp", Astro.site).href,
  "sameAs": [
    "https://github.com/yoryer",
    "https://linkedin.com/in/yoryer",
    "https://dribbble.com/yoryer"
  ],
  "jobTitle": "Software Engineer",
  "description": description,
  "alumniOf": {
    "@type": "Organization",
    "name": "Universidad Nacional de Asunci√≥n"
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "PY"
  },
  "email": "hi@yoryer.com",
  "knowsAbout": [
    "Web Development",
    "Mobile Development",
    "React",
    "Flutter",
    "JavaScript",
    "TypeScript",
    "Node.js",
    "API Development"
  ]
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <SEO 
      title={title}
      description={description}
      lang={lang}
      schema={schema}
    />
    
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    
    <!-- Google Analytics -->
    {import.meta.env.PUBLIC_GA_MEASUREMENT_ID && (
      <GoogleAnalytics id={import.meta.env.PUBLIC_GA_MEASUREMENT_ID} />
    )}
  </head>
  <body class="bg-blue bg-repeat text-white bg-[url('/img/bg.svg')] bg-cover">
    <img
      class="absolute pointer-events-none transition-opacity duration-100"
      src="/img/hero_hover.svg"
      alt=""
      id="hero-hover-img"
      style="position: absolute; display: none; z-index: 1000; width: 1px; height: 1px;"
    />
    <div class="overflow-x-hidden">
      <Header />
      <!-- Main Content -->
      <main>
        <Hero />
        <About />
        <Skills />
        <Work />
        <Blog />
        <Contact />
      </main>
      <Footer />
    </div>
  </body>
</html>
